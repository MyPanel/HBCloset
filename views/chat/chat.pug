    div(id="chatContent")
        #roomList(style='width: 100%; height: 80%; margin: 0 auto; padding: 10px 10px;')
        br
        input#createRoom(type="button", value="방 생성")

        #content(style='display: none; float: left; width: 50%; height: 80%; margin: 30px 30px; padding: 10px 10px;border: solid 1px #999; overflow-y: scroll;')
