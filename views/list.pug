extends closet.pug

block list
    div(id="main")
        div(class="inner")
            div(class="thumbnails")
                -if(list!=null)
                    -for(var i=0;i<list.length;i++) 
                        div(class="box")
                            a(href="https://youtu.be/s6zR2T9vn2c" class="image fit")
                                img(src="image/clothes/"+ list[i].name+'/'+'1.jpg' ,alt="이미지 없음")
                            div(class="inner")
                                h3=list[i].name
                                p=list[i].cost
                                a(href="/closet/detail/"+list[i].id, class="button style3 fit" data-poptrox="youtube,800x400") Watch
                -else
                    div(class="nullbox")
                        h1 저장된 옷이 없습니다.